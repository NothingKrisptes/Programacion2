<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <menuitem id="biblioteca_menu" name="Biblioteca" sequence="10"/>

  <record id="action_autor" model="ir.actions.act_window">
    <field name="name">Autores</field>
    <field name="res_model">biblioteca.autor</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_autor" parent="biblioteca_menu" name="Autores" action="action_autor" sequence="10"/>

  <record id="action_editorial" model="ir.actions.act_window">
    <field name="name">Editoriales</field>
    <field name="res_model">biblioteca.editorial</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_editorial" parent="biblioteca_menu" name="Editoriales" action="action_editorial" sequence="20"/>

  <record id="action_libro" model="ir.actions.act_window">
    <field name="name">Libros</field>
    <field name="res_model">biblioteca.libro</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_libro" parent="biblioteca_menu" name="Libros" action="action_libro" sequence="30"/>

  <record id="action_usuario" model="ir.actions.act_window">
    <field name="name">Usuarios</field>
    <field name="res_model">biblioteca.usuario</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_usuario" parent="biblioteca_menu" name="Usuarios" action="action_usuario" sequence="40"/>

  <record id="action_personal" model="ir.actions.act_window">
    <field name="name">Personal</field>
    <field name="res_model">biblioteca.personal</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_personal" parent="biblioteca_menu" name="Personal" action="action_personal" sequence="50"/>

  <record id="action_prestamo" model="ir.actions.act_window">
    <field name="name">Préstamos</field>
    <field name="res_model">biblioteca.prestamo</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_prestamo" parent="biblioteca_menu" name="Préstamos" action="action_prestamo" sequence="60"/>

  <record id="action_multa" model="ir.actions.act_window">
    <field name="name">Multas</field>
    <field name="res_model">biblioteca.multa</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_multa" parent="biblioteca_menu" name="Multas" action="action_multa" sequence="70"/>

  <record id="view_autor_list" model="ir.ui.view">
    <field name="name">biblioteca.autor.list</field>
    <field name="model">biblioteca.autor</field>
    <field name="arch" type="xml">
      <list>
        <field name="full_name"/>
        <field name="country_id"/>
        <field name="birth_date"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_autor_form" model="ir.ui.view">
    <field name="name">biblioteca.autor.form</field>
    <field name="model">biblioteca.autor</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="firstname"/>
              <field name="lastname"/>
              <field name="full_name" readonly="1"/>
              <field name="country_id"/>
            </group>
            <group>
              <field name="birth_date"/>
              <field name="death_date"/>
              <field name="active"/>
            </group>
          </group>
          <notebook>
            <page string="Biografía">
              <field name="biography"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_editorial_list" model="ir.ui.view">
    <field name="name">biblioteca.editorial.list</field>
    <field name="model">biblioteca.editorial</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="website"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="city"/>
        <field name="country_id"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_editorial_form" model="ir.ui.view">
    <field name="name">biblioteca.editorial.form</field>
    <field name="model">biblioteca.editorial</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="website"/>
              <field name="email"/>
              <field name="phone"/>
            </group>
            <group>
              <field name="street"/>
              <field name="city"/>
              <field name="country_id"/>
              <field name="active"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_libro_list" model="ir.ui.view">
    <field name="name">biblioteca.libro.list</field>
    <field name="model">biblioteca.libro</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="isbn"/>
        <field name="category"/>
        <field name="editorial_id"/>
        <field name="ejemplares"/>
        <field name="prestamos_activos"/>
        <field name="disponibles"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <record id="view_libro_form" model="ir.ui.view">
    <field name="name">biblioteca.libro.form</field>
    <field name="model">biblioteca.libro</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_view_prestamos" type="object" string="Ver préstamos" class="oe_stat_button"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="isbn"/>
              <field name="category"/>
              <field name="publication_date"/>
              <field name="pages"/>
            </group>
            <group>
              <field name="editorial_id"/>
              <field name="autor_ids" widget="many2many_tags"/>
              <field name="ejemplares"/>
              <field name="prestamos_activos" readonly="1"/>
              <field name="disponibles" readonly="1"/>
            </group>
          </group>
          <notebook>
            <page string="Descripción">
              <field name="description"/>
            </page>
            <page string="Préstamos">
              <field name="prestamo_ids">
                <list editable="bottom">
                  <field name="usuario_id"/>
                  <field name="fecha_prestamo"/>
                  <field name="dias"/>
                  <field name="fecha_devolucion_prevista" readonly="1"/>
                  <field name="state"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_usuario_list" model="ir.ui.view">
    <field name="name">biblioteca.usuario.list</field>
    <field name="model">biblioteca.usuario</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="dni"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="sancionado"/>
        <field name="fecha_alta"/>
      </list>
    </field>
  </record>

  <record id="view_usuario_form" model="ir.ui.view">
    <field name="name">biblioteca.usuario.form</field>
    <field name="model">biblioteca.usuario</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="dni"/>
              <field name="email"/>
              <field name="phone"/>
            </group>
            <group>
              <field name="address"/>
              <field name="fecha_alta"/>
              <field name="sancionado"/>
            </group>
          </group>
          <notebook>
            <page string="Préstamos">
              <field name="prestamo_ids" context="{'default_usuario_id': id}">
                <list>
                  <field name="libro_id"/>
                  <field name="fecha_prestamo"/>
                  <field name="fecha_devolucion_prevista"/>
                  <field name="state"/>
                </list>
              </field>
            </page>
            <page string="Multas">
              <field name="multa_ids">
                <list>
                  <field name="prestamo_id"/>
                  <field name="tarifa_por_dia"/>
                  <field name="dias_retraso"/>
                  <field name="monto"/>
                  <field name="pagada"/>
                  <field name="fecha"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_personal_list" model="ir.ui.view">
    <field name="name">biblioteca.personal.list</field>
    <field name="model">biblioteca.personal</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="role"/>
        <field name="employee_code"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_personal_form" model="ir.ui.view">
    <field name="name">biblioteca.personal.form</field>
    <field name="model">biblioteca.personal</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="role"/>
              <field name="employee_code"/>
            </group>
            <group>
              <field name="email"/>
              <field name="phone"/>
              <field name="active"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_prestamo_list" model="ir.ui.view">
    <field name="name">biblioteca.prestamo.list</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
      <list>
        <field name="libro_id"/>
        <field name="usuario_id"/>
        <field name="personal_id"/>
        <field name="fecha_prestamo"/>
        <field name="dias"/>
        <field name="fecha_devolucion_prevista"/>
        <field name="fecha_devolucion_real"/>
        <field name="state"/>
        <field name="dias_retraso"/>
      </list>
    </field>
  </record>

  <record id="view_prestamo_form" model="ir.ui.view">
    <field name="name">biblioteca.prestamo.form</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
      <form string="Préstamo">
        <header>
          <button name="action_devolver" type="object" string="Devolver" class="btn-primary"
                  invisible="state != 'prestado'"/>
          <field name="state" widget="statusbar" statusbar_visible="prestado,devuelto,vencido"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="libro_id" options="{'no_open': True}"/>
              <field name="usuario_id"/>
              <field name="personal_id"/>
            </group>
            <group>
              <field name="fecha_prestamo"/>
              <field name="dias"/>
              <field name="fecha_devolucion_prevista" readonly="1"/>
              <field name="fecha_devolucion_real"/>
            </group>
          </group>
          <group>
            <field name="dias_retraso" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_multa_list" model="ir.ui.view">
    <field name="name">biblioteca.multa.list</field>
    <field name="model">biblioteca.multa</field>
    <field name="arch" type="xml">
      <list>
        <field name="prestamo_id"/>
        <field name="usuario_id"/>
        <field name="tarifa_por_dia"/>
        <field name="dias_retraso"/>
        <field name="monto"/>
        <field name="pagada"/>
        <field name="fecha"/>
      </list>
    </field>
  </record>

  <record id="view_multa_form" model="ir.ui.view">
    <field name="name">biblioteca.multa.form</field>
    <field name="model">biblioteca.multa</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_marcar_pagada" type="object" string="Marcar pagada"
                  invisible="pagada == True"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="prestamo_id"/>
              <field name="usuario_id" readonly="1"/>
            </group>
            <group>
              <field name="tarifa_por_dia"/>
              <field name="dias_retraso" readonly="1"/>
              <field name="monto" readonly="1"/>
              <field name="pagada"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>